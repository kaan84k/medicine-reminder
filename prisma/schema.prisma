generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(uuid()) @db.Uuid
  email        String    @unique
  passwordHash String
  medicines    Medicine[]
  createdAt    DateTime  @default(now())
}

model Medicine {
  id         String            @id @default(uuid()) @db.Uuid
  userId     String            @db.Uuid
  name       String
  dose       String?
  time       String
  notes      String?
  statuses   ReminderStatus[]
  createdAt  DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ReminderStatus {
  id          String            @id @default(uuid()) @db.Uuid
  medicineId  String            @db.Uuid
  date        DateTime
  status      ReminderState

  medicine Medicine @relation(fields: [medicineId], references: [id], onDelete: Cascade)

  @@unique([medicineId, date])
  @@index([medicineId])
}

enum ReminderState {
  Pending
  Taken
}
